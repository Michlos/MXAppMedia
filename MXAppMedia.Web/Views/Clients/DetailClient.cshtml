@*Detalhes do cliente com view de listagem de mídias*@
@model MXAppMedia.Web.Models.ClientViewModel
@*Incluir Mídias do cliente*@
@using MXAppMedia.Web.Models
@{
    ViewData["Title"] = "Detalhes do Cliente";
}
<h2>Detalhes do Cliente</h2>
<div class="mb-3">
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        @*SE PESSOA JURÍDICA EXIBE CNPJ SE NÃO EXIBE CPF*@
        @if (Model.CNPJ != null && Model.CNPJ != string.Empty)
        {
            <dt class="col-sm-2">CNPJ:</dt>
            <dd class="col-sm-10">@Model.CNPJ</dd>
        }
        else
        {
            <dt class="col-sm-2">CPF:</dt>
            <dd class="col-sm-10">@Model.CPF</dd>
        }
        <dt class="col-sm-2">Contact:</dt>
        <dd class="col-sm-10">@Model.ContactPerson</dd>
        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
    @*LISTA DE MÍDIAS DO CLIENTE*@
    <h3>Mídias do Cliente</h3>
    <div class="mb-3">
        <a asp-page="/Medias/CreateMediaClient" asp-route-clientId="@Model.Id" class="btn btn-primary">Criar Nova Mídia</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Media URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var media in Model.Medias)
            {
                <tr>
                    <td>@media.Title</td>
                    <td>@media.Description</td>
                    <td><a href="@media.MediaUrl" target="_blank">@media.MediaUrl</a></td>
                    <td>
                        <a asp-page="/Medias/EditMedia" asp-route-id="@media.Id" class="btn btn-secondary">Edit</a>
                        <form method="post" asp-page="/Medias/DeleteMedia" asp-route-id="@media.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>


