@model IEnumerable<MXAppMedia.Web.Models.ClientViewModel>  
<h2>Clients</h2>  
<br />  
<a asp-action="CreateClient" class="btn btn-primary" title="Create New Client">  
    <span class="fa fa-plus"></span> Create New Client  
</a>  
<div class="panel panel-default">  
    <table class="table table-striped">  
        <thead>  
            <tr>  
                <th>  
                    @Html.DisplayNameFor(model => model.Id)  
                </th>  
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>  
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>  
                    @Html.DisplayNameFor(model => model.ContactPerson)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>  
        </thead>  
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactPerson)
                    </td>
                    <td align="right">
                        <a asp-controller="Medias" asp-action="CreateMedia" asp-route-clientId="@item.Id" class="btn btn-success" title="New Media">
                            <span class="fa fa-play"></span>
                        </a>
                    </td>
                    <td align="right">
                        <a asp-action="EditClient" asp-route-id="@item.Id" title="Edit" class="btn btn-warning">
                            <span class="fa fa-edit"></span>
                        </a>
                    </td>
                    <td align="left">
                        <a asp-action="DeleteClient" asp-route-id="@item.Id" title="Delete" class="btn btn-danger">
                            <span class="fa fa-trash-alt"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>  
</div>
